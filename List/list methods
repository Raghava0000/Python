#     b.append(ele+2)
#     print(b)
    
# for ele in a:
#     if ele%2==0:
#         b.append(ele+2)
#         print(b)
#     else:
#         b.append(ele+3)
#     print(b) 




# list comprehension:-most elegant way of creating the list

# 1st syntax:
# [expression:for ele in sequence]
# a=[12,45,78,23,6,89,4,94,52,20]
# b=[]

# print(ele+2 for ele in a)

# 2nd syntax:
# print([ele+2 for ele in a  if ele%2==0])

# 3rd syntax:
# [expression if condition else expression for ele sequence]
# data = print([ele+2==0 if ele%2==0 else ele+3 for ele in a])